+static int16_t LDDecode(int32_t xi0, int32_t xi1, int32_t xi2, int32_t xi3)
+{
+  int32_t t;
+
+  t  = g(xi0);
+  t += g(xi1);
+  t += g(xi2);
+  t += g(xi3);
+
+  t -= 8*PARAM_Q;
+  t >>= 31;
+  return t&1;
+}
