+    chan->scid = BLE_L2CAP_CID_RM;
+    chan->dcid = BLE_L2CAP_CID_RM;
+    chan->my_mtu = BLE_SM_MTU;
+    chan->rx_fn = ble_rm_rx;
+    return chan;
+}
