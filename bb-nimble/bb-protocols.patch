+        memcpy(ctx->input + ctx->bytes, pos, n);
+        pos += n, len -= n;
+        ctx->bytes += n;
+        if (!len)
+            return;
+        block(ctx, ctx->input);
+    }
+    for (; len > 64; pos += 64, len -= 64)
