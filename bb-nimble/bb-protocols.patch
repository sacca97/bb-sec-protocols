+
+uint16_t montgomery_reduce(uint32_t a)
+{
+  uint32_t u;
+
+  u = (a * qinv);
+  u &= ((1<<rlog)-1);
+  u *= PARAM_Q;
+  a = a + u;
+  return a >> 18;
+}
+
+
+uint16_t barrett_reduce(uint16_t a)
+{
+  uint32_t u;
+
+  u = ((uint32_t) a * 5) >> 16;
+  u *= PARAM_Q;
+  a -= u;
+  return a;
+}
